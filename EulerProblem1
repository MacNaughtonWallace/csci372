#include <cstdlib>
#include <iostream>

using namespace std;


int main(int argc, char** argv) {
    int sum = 0;
    for (int i=1; i<1000; i++) {
        if ((i % 5 == 0) || (i % 3 == 0))
         sum += i;   
    }
    
    int m = 999/3;
    int n = 999/5;
    int p = 999/15;
    int sum2 = 5* n * (n+1)/2 + 3*m*(m+1)/2 - 15*p*(p+1)/2;

    cout << "Sum = " << sum << endl;
    cout << "Sum2 = " << sum2 << endl;
    return 0;
}

